<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="colorAccent">#ff80cbc4</color>
    <color name="colorPrimary">#ff212121</color>
    <style name="Theme.Nab5" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- other items -->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="actionBarSize">40dip</item>
        <item name="android:actionBarSize">35dip</item>
        <item name="android:itemBackground">#000000</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="SubmenuHeaderStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#E76238</item>
    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>
    <!--for FullScreen -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#FFFFFF</item>
    </style>
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:colorBackground">@color/red</item>
    </style>


    <!-- Base application theme. -->
</resources>